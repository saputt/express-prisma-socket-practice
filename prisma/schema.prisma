generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  refreshToken String?
  createdAt DateTime @default(now())

  vegetables vegetables[] @relation("vegetablesSeller")
}

model vegetables {
  id String @id @default(uuid())
  name String 
  price Float
  quality categoryVegetables @default(STANDART)
  stock Int
  seller String

  user user @relation("vegetablesSeller", fields: [seller], references: [id], onDelete: Cascade)
}

enum categoryVegetables {
  LOW
  STANDART
  HIGH
}